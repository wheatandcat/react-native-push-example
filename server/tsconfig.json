{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "lib": ["es5", "es2015", "es2016", "es2017", "esnext"],
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "outDir": "./dist/",
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "target": "es2015"
  },
  "include": ["./src/**/*"],
  "exclude": ["node_modules"]
}
